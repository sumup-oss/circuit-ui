{
  "presets": [
    ["@babel/preset-env", { "loose": true }],
    [
      "@babel/preset-react",
      { "runtime": "automatic", "importSource": "@emotion/react" }
    ]
  ],
  "plugins": [
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    "lodash",
    "@emotion/babel-plugin"
  ],
  "env": {
    "test": {
      "plugins": [
        ["@babel/plugin-proposal-class-properties", { "loose": true }],
        "lodash",
        "react-docgen"
      ],
      "presets": [
        "@babel/preset-typescript",
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    }
  }
}
