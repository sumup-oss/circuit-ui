{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "outDir": "./dist/es",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "cli/**/*",
    "tests/**/*",
    "themes/**/*",
    "types/**/*",
    "utils/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules", "**/dist/**/*", "**/*.spec.*", "**/*.stories.*"],
  "typeRoots": ["./types/"]
}
