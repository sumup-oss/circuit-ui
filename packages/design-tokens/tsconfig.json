{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist/es"
  },
  "include": [
    "tests/**/*",
    "themes/**/*",
    "types/**/*",
    "utils/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules", "**/dist/**/*", "**/*.spec.*", "**/*.stories.*"],
  "typeRoots": ["./node_modules/@types", "./types/"]
}
