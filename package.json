{
  "name": "circuit-ui-web",
  "description": "The web implementation of Circuit UI, SumUp's design system",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/cna-template/template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumup-oss/circuit-ui.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sumup-oss/circuit-ui/issues"
  },
  "publishConfig": {
    "provenance": true
  },
  "homepage": "https://github.com/sumup-oss/circuit-ui#readme",
  "scripts": {
    "start": "lerna run start --stream",
    "build": "lerna run build",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "foundry run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "foundry run stylelint \"**/*.css\"",
    "docs": "npm run docs:start",
    "docs:start": "storybook dev -p 6006",
    "docs:build": "storybook build -c .storybook -o public && cp -R ./packages/icons/web ./public/icons",
    "vercel-build": "npm run copy-docs && npm run build && npm run docs:build",
    "check:security": "audit-ci --critical",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "check:svg-sizes": "./scripts/check-svg-sizes.sh",
    "copy-docs": "./scripts/copy-docs.sh",
    "bootstrap": "npm run build && npm run copy-docs && cd packages/cna-template/template && npm ci",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@emotion/eslint-plugin": "^11.11.0",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-actions": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-storysource": "^8.0.0",
    "@storybook/addon-toolbars": "^8.0.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/manager-api": "^8.0.0",
    "@storybook/preview-api": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/source-loader": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@storybook/theming": "^8.0.0",
    "@sumup/eslint-plugin-circuit-ui": "^4.0.0",
    "@sumup/foundry": "^7.0.0",
    "@sumup/stylelint-plugin-circuit-ui": "^1.0.0",
    "@types/node": "^18.16.19",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^0.34.6",
    "audit-ci": "^6.6.1",
    "chromatic": "^10.3.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-server-components": "^1.1.2",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "github-slugger": "^2.0.0",
    "jsdom": "^23.2.0",
    "lerna": "^8.0.2",
    "license-checker": "^25.0.1",
    "prettier-plugin-astro": "^0.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-gfm": "^4.0.0",
    "storybook": "^8.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.0",
    "svgo": "^3.2.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.2",
    "vite-plugin-turbosnap": "^1.0.2",
    "vitest": "^0.34.6",
    "vitest-github-actions-reporter": "^0.11.1"
  }
}
