{
  "name": "circuit-ui-web",
  "description": "Circuit UI Web, part of SumUp's design system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumup-oss/circuit-ui.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sumup-oss/circuit-ui/issues"
  },
  "homepage": "https://github.com/sumup-oss/circuit-ui#readme",
  "scripts": {
    "start": "lerna run start --stream",
    "build": "lerna run build",
    "test": "jest --watch",
    "test:ci": "mkdir -p __reports__ && jest --json --outputFile=__reports__/jest-results.json --ci --coverage --runInBand",
    "lint": "foundry run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --format github",
    "docs": "yarn docs:start",
    "docs:start": "start-storybook -p 6006",
    "docs:build": "build-storybook -c .storybook -o public && cp -R ./packages/icons/web ./public/icons",
    "vercel-build": "yarn copy-docs && yarn build && yarn docs:build",
    "check:security": "audit-ci --critical",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "check:svg-sizes": "./scripts/check-svg-sizes.sh",
    "copy-docs": "./scripts/copy-docs.sh",
    "bootstrap": "yarn build && yarn copy-docs && cd packages/create-sumup-next-app/template && yarn --no-lockfile --ignore-scripts",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.14.1",
    "@storybook/addon-a11y": "^6.4.18",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-backgrounds": "^6.4.18",
    "@storybook/addon-controls": "^6.4.18",
    "@storybook/addon-docs": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/addon-storysource": "^6.4.18",
    "@storybook/addon-viewport": "^6.4.18",
    "@storybook/addons": "^6.4.18",
    "@storybook/builder-webpack5": "^6.4.18",
    "@storybook/manager-webpack5": "^6.4.18",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.4.18",
    "@storybook/source-loader": "^6.4.18",
    "@storybook/theming": "^6.4.18",
    "@sumup/foundry": "^4.0.0-canary",
    "@types/jest": "^27.0.1",
    "audit-ci": "^5.1.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.1",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-react-docgen": "^4.2.1",
    "eslint-formatter-github": "^1.0.11",
    "eslint-plugin-prettier": "^4.0.0",
    "expect": "^27.0.2",
    "jest": "^27.0.6",
    "jest-cli": "^27.1.0",
    "lerna": "^4.0.0",
    "license-checker": "^25.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "storybook-addon-performance": "^0.16.1",
    "svgo": "^2.0.3",
    "typescript": "^4.4.3",
    "webpack": "^5.67.0"
  },
  "resolutions": {
    "axe-core": "^4.3.5"
  }
}
